{
    "name": "node-template",
    "version": "1.0.0",
    "description": "a template to start node backend",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "dev": "nodemon src/server.js",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "husky",
        "test": "jest --watch --runInBand"
    },
    "author": "Ankit Kumar",
    "license": "ISC",
    "devDependencies": {
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "nodemon": "^3.1.0",
        "prettier": "3.2.5",
        "supertest": "^6.3.4"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "http-errors": "^2.0.0",
        "jest": "^29.7.0",
        "winston": "^3.12.0"
    }
}
